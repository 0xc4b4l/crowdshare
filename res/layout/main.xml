	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent" >

          <!-- Header -->

          <include
              android:id="@+id/headerLayout"
              layout="@layout/header_layout" />
          
          <!-- Body -->
         
     
	<TableLayout android:id="@+id/tableMain"   	
              android:layout_marginTop="50dp"
    		 style="@style/smainTable">
    		 
    	<TableRow android:id="@+id/tableRow1a">
    	    
        	<ImageView android:id="@+id/callLabel"
         		android:contentDescription="@string/callLabel"
         		android:src="@drawable/ic_launcher_call"
         		style="@style/smainTableRow" /> 
         		
    	    <ImageView android:id="@+id/messageLabel"
       			android:contentDescription="@string/messageLabel"
       			android:src="@drawable/ic_launcher_message"
       			style="@style/smainTableRow" /> 	
       			          
    		 <ImageView android:id="@+id/contactsLabel"
       			android:contentDescription="@string/contactsLabel"
         		android:src="@drawable/ic_launcher_contacts"         			
       			style="@style/smainTableRow" />   
       			
        </TableRow>  
        
        <TableRow android:id="@+id/tableRow1b">
            
			<TextView android:id="@+id/callText"
				style="@style/smainTableRowText" 
				android:text="@string/callLabel" />
			
			<TextView android:id="@+id/messageText"
				style="@style/smainTableRowText" 
				android:text="@string/messageLabel" />
			
			<TextView android:id="@+id/contactsText"
				style="@style/smainTableRowText" 
				android:text="@string/contactsLabel" />
			
		</TableRow>
		
        
    	<TableRow android:id="@+id/tableRow2a">
    	    
           	<ImageView android:id="@+id/mapsLabel"
       			android:contentDescription="@string/mapsLabel"
         		android:src="@drawable/ic_launcher_map"
       			style="@style/smainTableRow" /> 
       			
    	    <ImageView android:id="@+id/sharingLabel"
       			android:contentDescription="@string/sharingLabel"
       			android:src="@drawable/ic_launcher_sharing"
       			style="@style/smainTableRow" /> 	 
       			         
    	    <ImageView android:id="@+id/wifiLabel"
         		android:contentDescription="@string/wifiLabel"
         		android:src="@drawable/ic_launcher_wifi"
         		style="@style/smainTableRow" />  
         		 
       	</TableRow> 
       	
		<TableRow android:id="@+id/tableRow2b">
		    
			<TextView android:id="@+id/mapsText"
				style="@style/smainTableRowText" 
				android:text="@string/mapsLabel" />
			
			<TextView android:id="@+id/sharingText"
				style="@style/smainTableRowText" 
				android:text="@string/sharingLabel" />
			
			<TextView android:id="@+id/wifiText"
				style="@style/smainTableRowText" 
				android:text="@string/wifiLabel" />
			
		</TableRow>   
		
   	 	<TableRow android:id="@+id/tableRow3a">
   	 	    
       	 	<ImageView android:id="@+id/settingsLabel"
         		android:contentDescription="@string/settingsLabel"
    			android:src="@drawable/ic_launcher_settings"
       			style="@style/smainTableRow"  /> 
       			
    		<ImageView android:id="@+id/powerLabel"
       			android:contentDescription="@string/powerLabel"
       			android:src="@drawable/ic_launcher_power"
       			style="@style/smainTableRow"  /> 	
       			          
    		<ImageView android:id="@+id/helpLabel"
     			android:contentDescription="@string/helpLabel"
				android:src="@drawable/ic_launcher_emergency"
         		style="@style/smainTableRow"  />  
         		 
    	</TableRow> 
    	
		<TableRow android:id="@+id/tableRow3b">
		    
			<TextView android:id="@+id/settingsText"
				style="@style/smainTableRowText" 
				android:text="@string/settingsLabel" />
			
			<TextView android:id="@+id/powerText"
				style="@style/smainTableRowText" 
				android:text="@string/powerLabel" />
			
			<TextView android:id="@+id/helpText"
				style="@style/smainTableRowText" 
				android:text="@string/helpLabel" />
			
		</TableRow>
	
	</TableLayout>   	
	
 </RelativeLayout>

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent" >

          <!-- Header -->

		<include android:id="@+id/headerLayout"
              layout="@layout/header_layout" />
          <!-- Body -->
    
    
		<ScrollView android:id="@+id/scrollViewAbout" 
			android:orientation="vertical"
			android:layout_marginTop="5dp"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:fillViewport="true" >
			
    		<RelativeLayout android:layout_width="fill_parent"
        		android:layout_height="wrap_content" >
		
				
			 	<TextView android:id="@+id/saboutversion"
					android:text="@string/version"
            		android:layout_below="@+id/saboutheader"
					style="@style/sabout" />  
				
				<TextView android:id="@+id/saboutheader"
				android:text="@string/versiontitle"
				style="@style/saboutheader" />  
				
					
				<TextView android:id="@+id/abouthome"
					android:text="@string/servalhome"
					android:layout_below="@+id/saboutversion"
					style="@style/saboutheader" />
				
				<TextView android:id="@+id/homeurl"
					android:text="@string/servalhomeurl"
					android:layout_below="@+id/abouthome"
					style="@style/sabouturl" />
				
				<TextView android:id="@+id/licence"
					android:text="@string/licencetitle"
					android:layout_below="@+id/homeurl"
					style="@style/saboutheader" />

				<TextView android:id="@+id/licencetype"
					android:text="@string/licencetype"
					android:layout_below="@+id/licence"
					style="@style/sabout" />
				
				<TextView android:id="@+id/licenceurl"
					android:text="@string/licenceurl"
					android:layout_below="@+id/licencetype"
					style="@style/sabouturl" />
    		
    		</RelativeLayout>

		</ScrollView>	

</RelativeLayout>
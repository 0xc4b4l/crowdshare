<?xml version="1.0" encoding="utf-8"?>

<resources>

<!-- Body -->
	<style name="sbody">
		<!-- <item name="android:background">@color/black</item> -->
		<item name="android:textColor">@color/white</item>   
		<item name="android:layout_width">wrap_content</item>
   		<item name="android:layout_height">wrap_content</item>
	</style>
<!-- Header -->
 	
    <style name="sheader" parent="sbody">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">@color/green</item>     
        <item name="android:layout_marginBottom">12sp</item>
        <item name="android:layout_marginRight">4sp</item>
        <item name="android:layout_alignParentRight">true</item>
   		<item name="android:layout_alignParentTop">true</item>
 	</style>  
   			  
    <style name="slogo" parent="sbody"> 	 
		<item name="android:src">@drawable/ic_serval_logo</item>
   		<item name="android:layout_alignParentTop">true</item>
 	</style>
 	
    <style name="surl" parent="sbody"> 	 
		<item name="android:layout_alignParentRight">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorLink">@color/green</item>
        <item name="android:layout_marginRight">4sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:autoLink">web</item>
 	</style>
 	
 	<!-- Footer -->
 	
 	 <style name="swarning" parent="sbody"> 	 
		<item name="android:textStyle">bold</item>          
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/red</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">5dp</item>
 	</style>
 	<!-- Body Content -->	
 
  	<style name="slayoutcontent" parent="scontent">
	<item name="android:layout_alignParentTop">true</item>
 	</style>
 	
 	<style name="scontent" parent="sbody">
		<item name="android:gravity">center</item>
		<item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:layout_marginRight">5sp</item>
    </style>
 	
 	<style name="sphonesetcontent" parent="sbody">
 		<item name="android:layout_centerInParent">true</item>
   		<item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginBottom">10sp</item> 
        <item name="android:singleLine">true</item>
		<item name="android:background">@color/white</item>
		<item name="android:textColor">@color/black</item> 
    </style>
    
    <style name="stitle" parent="scontent"> 	 
		<item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">10sp</item>
  	</style>  	
  	
    <style name="stext" parent="scontent"> 	 
		<item name="android:textColor">@color/white</item>
   		<item name="android:textSize">13sp</item>
  	</style> 
  	
  	<style name="splainurl" parent="surl">
  		<item name="android:gravity">center</item> 	 
		<item name="android:textColorLink">@color/white</item>
   		<item name="android:textSize">13sp</item>
  	</style> 
  	
  	<style name="stextleft" parent="stext"> 	 
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_marginLeft">5sp</item>
  	</style> 
  	
    <style name="stextright" parent="stext"> 	 
		<item name="android:layout_alignParentRight">true</item>
  	</style>
 
    <style name="smtextright" parent="stextright"> 	 
		<item name="android:layout_marginBottom">15sp</item>
		<item name="android:layout_marginTop">15sp</item>
  	</style>  	 
  
    <style name="sinput_text" parent="stext"> 	 
		<item name="android:layout_height">wrap_content</item>
		<item name="android:scrollbars">vertical</item>
		<item name="android:layout_marginBottom">10sp</item>
		<item name="android:minWidth">200sp</item>
		<item name="android:minHeight">200sp</item>
  	</style>  	

  	<style name="stextleftsmall" parent="stextleft">
		<item name="android:layout_marginTop">3sp</item> 
		<item name="android:layout_marginBottom">3sp</item>	 
   		<item name="android:textSize">12sp</item>
  	</style> 

  	<style name="stextrightsmall" parent="stextright">
		<item name="android:layout_marginTop">3sp</item> 
		<item name="android:layout_marginBottom">3sp</item>	 
   		<item name="android:textSize">12sp</item>
  	</style> 
  	
  	<style name="stextsmall" parent="stext"> 	 
   		<item name="android:textSize">12sp</item>
  	</style>   
  	
  	<!-- Buttons and Widgets -->
  	<style name="sbtnwizard" parent="scontent"> 	
 		<item name="android:textSize">12sp</item>
		<item name="android:layout_marginBottom">12sp</item>
		<item name="android:textColor">@color/white</item>  
		<item name="android:background">@drawable/button_style</item> 		 		
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:minWidth">50sp</item>
 	</style>  
 	
  	<style name="sbtnleft" parent="sbtnwizard"> 		 		
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_marginBottom">15sp</item>
		<item name="android:layout_marginTop">15sp</item>
		<item name="android:layout_marginLeft">5sp</item>
 	</style>  
 	
 	 <style name="sbtnright" parent="sbtnwizard"> 		 		
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_marginRight">5sp</item>
 	</style> 
 
  	<style name="sphonewidget" parent="sbody">
  		<item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:layout_marginBottom">5sp</item>        
    </style> 
 
 	<!-- Transparent -->
 	<style name="stbody">
		<item name="android:textColor">@color/white</item>   
		<item name="android:layout_width">wrap_content</item>
   		<item name="android:layout_height">wrap_content</item>
	</style>
	
